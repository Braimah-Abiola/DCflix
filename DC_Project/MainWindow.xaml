<Window x:Class="DC_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DC_Project"
        xmlns:viewModels="clr-namespace:DC_Project.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        Title="DCflix" Height="600" Width="950">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Title Bar-->
        <Grid Grid.Row="0"
              Background="#21184D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <!--DC Logo-->
            <Image Grid.Row="0"/>

            <!--Minimize-->
            <Button Grid.Column="2" 
                    Style="{StaticResource WindowsControlButton}"
                    Content="—"
                    Command="{Binding MinimizeCommand}"/>

            <!--Maximize-->
            <Button Grid.Column="3" 
                    Style="{StaticResource WindowsControlButton}"
                    Content="☐"
                    Command="{Binding MaximizeCommand}"/>

            <!--Close-->
            <Button Grid.Column="4" 
                    Style="{StaticResource CloseControlButton}"
                    Content="X"
                    Command="{Binding CloseCommand}"/>
        </Grid>
        
        <!--Main Area-->
        <Grid Grid.Row="2"
              Background="#FF323270">
            
        </Grid>

        <!--Search and Options-->
        <Grid Grid.Row="1"
              Background="#FF323270">
            <Grid.Effect>
                <DropShadowEffect Opacity="0.3"
                                  Direction="260"
                                  ShadowDepth="3" 
                                  Color="#FF494949"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">

                <Border CornerRadius="100"
                        Background="Gray"
                        Height="40"
                        Width="40"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
